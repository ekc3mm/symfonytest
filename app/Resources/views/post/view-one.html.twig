{% extends 'post.html.twig' %}

{% block posts %}
    <h3 >{{ product.title }}</h3>
    <div class="row">
        <div class="col-md-4">
            <img src="{{ image_path }}/{{ product.image }}" alt="" class="img-thumbnail image">

        </div>
        <div class="col-md-4">
            category: {{ product.category.name }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            description: {{ product.description }}
        </div>
    </div>

{% endblock %}