<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Hello world{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"
              integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    {% endblock %}

</head>
<body>

<div class="container">

    <nav class="navbar navbar-light bg-faded rounded navbar-toggleable-md">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#containerNavbar" aria-controls="containerNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">Symfony</a>

        <div class="collapse navbar-collapse" id="containerNavbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('git') }}">git</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('random') }}">random</a></li>
                <li class="nav-item"><a class="nav-link"  href="{{ path('post-all') }}">All post</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('allusers') }}">allusers</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('question_index') }}">Questions</a></li>

                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('task-my') }}">My tasks</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('task-new') }}">New Task</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('fos_user_security_login') }}">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('fos_user_registration_register') }}">Registration</a></li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('post-new') }}">New post</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin') }}">Admin</a></li>
                {% endif %}
            </ul>

        </div>
    </nav>

</div>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            {% include ('::flash-messages.html.twig') %}
        </div>
    </div>

    <div class="row">

        <div class="col-sm-12">
            {% block body %}
            {% endblock %}
        </div>
    </div>

</div>

{% block javascripts %}

{% endblock %}
</body>
</html>